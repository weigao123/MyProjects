<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/charge_only_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="132dp"
        android:background="@drawable/margin_green"
        android:gravity="center"
        android:paddingBottom="22.7dp"
        android:paddingTop="22.7dp"
        android:text="@string/charge_only"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/media_and_charge_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33.3dp"
        android:background="@drawable/margin_green"
        android:gravity="center"
        android:paddingBottom="22.7dp"
        android:paddingTop="22.7dp"
        android:text="@string/media_charge"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

</LinearLayout>